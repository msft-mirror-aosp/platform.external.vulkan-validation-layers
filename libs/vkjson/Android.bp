cc_library_static {
    name: "libvkjson",
    clang: true,
    srcs: [
        "vkjson.cc",
        "vkjson_instance.cc",
    ],
    cflags: [
        "-Wall",
        "-Werror",
    ],
    cppflags: [
        "-std=c++11",
        "-Wno-sign-compare",
    ],
    export_include_dirs: [
        ".",
    ],
    whole_static_libs: [
        "cjson",
    ],
    header_libs: [
        "vk_headers",
    ],
}

